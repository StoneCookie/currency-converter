<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/decor2_dp"
    android:layout_marginVertical="@dimen/decor3_dp"
    android:background="@drawable/shadow_style"
    android:elevation="@dimen/shadow_dp"
    android:paddingHorizontal="@dimen/decor2_dp"
    android:paddingVertical="@dimen/decor3_dp">

    <TextView
        android:id="@+id/vault_ico"
        android:layout_width="@dimen/width_ico_dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title1_sp"
        android:textColor="@color/secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vault_name"
        android:layout_width="@dimen/width_name_dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/title2_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vault_value"
        app:layout_constraintHorizontal_bias=".3"
        app:layout_constraintStart_toEndOf="@+id/vault_ico"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vault_value"
        android:layout_width="@dimen/width_rate_dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/decor3_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/title2_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/value_favorite"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/value_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:clickable="true"
        app:maxImageSize="@dimen/size_img"
        app:fabSize="mini"
        android:contentDescription="@string/favorite"
        android:focusable="true"
        app:borderWidth="@dimen/default_dp"
        app:elevation="@dimen/default_dp"
        app:tint="@color/secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_base_star" />

</androidx.constraintlayout.widget.ConstraintLayout>